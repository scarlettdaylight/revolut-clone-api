generator client {
  provider = "prisma-client-js"
}

//having sqlite as local and postgresal as staging/production is no longer possible
//have to install postgres locally
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}